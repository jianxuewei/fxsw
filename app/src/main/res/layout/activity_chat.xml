<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    android:orientation="vertical"
    tools:context="com.fxsw.fxsw.ChatActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <LinearLayout
        android:id="@+id/fullscreen_content"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView android:id="@+id/lv_message" android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1"
            android:duplicateParentState="true" android:clickable="true"
            android:keepScreenOn="true" android:textColor="#33b5e5"
            android:textStyle="bold" android:textSize="50sp" android:gravity="center"

             />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp" android:layout_weight="1"
                    android:id="@+id/et_input"
                    android:layout_height="wrap_content" android:hint="@string/str_please_input_here" />
                <Button
                    android:id="@+id/button_send_message"
                    android:text="@string/action_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
